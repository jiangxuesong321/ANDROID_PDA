<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MaterialPickingHomeActivity">

    <LinearLayout
            android:id="@+id/ll_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

        <TextView
                android:id="@+id/tv_plant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/text_plant"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_label_title" />

        <Spinner
                android:id="@+id/sp_plant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginEnd="-8dp"
                android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_ori_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_plant"
            android:layout_marginTop="10dp">

        <TextView
                android:id="@+id/tv_ori_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/text_ori_location"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_label_title" />

        <Spinner
                android:id="@+id/sp_ori_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginEnd="-8dp"
                android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_to_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll_ori_location"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_to_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/text_to_location"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_label_title" />

        <Spinner
                android:id="@+id/sp_to_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginEnd="-8dp"
                android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll_to_location"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/text_material"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_label_title" />

        <EditText
                android:id="@+id/et_material_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:textSize="14sp" />

        <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:background="@color/bg_colorSecondPrimary"
                android:onClick="addMaterial"
                android:text="@string/text_do"
                android:textColor="@color/text_colorSecondPrimary"
                android:textSize="@dimen/text_size_list_header" />
    </LinearLayout>

    <View
            android:id="@+id/v_bottom_line"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_material"
            android:layout_height="1dp"
            android:background="@color/text_light_gray_color" />

    <LinearLayout
            android:id="@+id/ll_material_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_above="@+id/ll_btn_group"
            android:layout_below="@+id/v_bottom_line"
            android:orientation="horizontal">

    <ListView
            android:id="@+id/lv_material_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_btn_group"
            android:layout_below="@id/v_bottom_line"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:divider="@color/colorDivider" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_colorSecondPrimary"
                android:textColor="@color/text_colorSecondPrimary"
                android:layout_weight="1"
                android:onClick="confirm"
                android:text="@string/text_search"
                android:textSize="@dimen/text_size_btn" />

    </LinearLayout>

</RelativeLayout>