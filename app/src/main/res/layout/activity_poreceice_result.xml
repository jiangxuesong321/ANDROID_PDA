<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.POReceiveResultActivity">

    <LinearLayout
        android:id="@+id/ll_po_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_po_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_po_number"
            android:textSize="@dimen/text_size_label_title" />

        <EditText
            android:id="@+id/et_po_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:enabled="false"
            android:text="10101010101010" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_po_number"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vendor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_vendor"
            android:textSize="@dimen/text_size_label_title" />

        <EditText
            android:id="@+id/et_vendor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:enabled="false"
            android:text="10101010101010" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_vendor"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_po_plant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_plant"
            android:textSize="@dimen/text_size_label_title" />

        <EditText
            android:id="@+id/et_po_plant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:enabled="false"
            android:text="10101010101010" />
    </LinearLayout>

    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_plant"
        android:layout_marginTop="8dp"
        android:background="@color/text_light_gray_color" />

    <LinearLayout
        android:id="@+id/ll_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_top_line"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_material_document_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.9"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_item"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />

        <TextView
            android:id="@+id/tv_material"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1.8"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_material"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2.1"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_material_desc"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />

        <TextView
            android:id="@+id/tv_storage_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_po_storage_location"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_quantity"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />
        <TextView
            android:id="@+id/tv_supplier_batch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.8"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="text"
            android:text="@string/text_goods_supplier_batch"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="4"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="text"
            android:text="@string/text_goods_bin_maturity_date"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_list_header" />
<!--            android:layout_weight="1.8"-->


<!--        <TextView-->
<!--            android:id="@+id/tv_location_value"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginLeft="2dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@color/bg_colorFourthPrimary"-->
<!--            android:gravity="center"-->
<!--            android:paddingTop="8dp"-->
<!--            android:paddingBottom="8dp"-->
<!--            android:text="@string/text_operation"-->
<!--            android:textColor="@color/colorPrimary"-->
<!--            android:textSize="@dimen/text_size_list_header" />-->
    </LinearLayout>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_list_header"
        android:background="@color/text_light_gray_color" />

    <ListView
        android:id="@+id/lv_po_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_btn_group"
        android:layout_below="@id/v_bottom_line"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:divider="@color/colorDivider">

    </ListView>

<!--    <Button-->
<!--        android:id="@+id/btn_confirm"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:layout_marginEnd="16dp"-->
<!--        android:layout_marginBottom="16dp"-->
<!--        android:layout_weight="1"-->
<!--        android:background="@color/bg_colorSecondPrimary"-->
<!--        android:onClick="confirm"-->
<!--        android:text="@string/text_post"-->
<!--        android:textColor="@color/text_colorSecondPrimary"-->
<!--        android:textSize="@dimen/text_size_btn" />-->

    <LinearLayout
        android:id="@+id/ll_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_colorSecondPrimary"
            android:textColor="@color/text_colorSecondPrimary"
            android:layout_weight="1"
            android:onClick="confirm"
            android:text="@string/text_po_receive_post"
            android:textSize="@dimen/text_size_btn" />

    </LinearLayout>

</RelativeLayout>