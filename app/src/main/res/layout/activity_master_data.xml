<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SalesInvoiceHomeActivity">
    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:background="@color/text_light_gray_color" />
    <LinearLayout
        android:id="@+id/ll_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_top_line"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="@string/text_master_data"
            android:textSize="@dimen/text_size_label_title"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="@string/text_last_change_date"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:textSize="@dimen/text_size_label_title"
            android:textColor="@color/colorPrimary"/>
        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="invisible"></ProgressBar>
         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_operation"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:textSize="@dimen/text_size_label_title"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_review"
            android:layout_marginLeft="8dp"
            android:background="@color/bg_colorFourthPrimary"
            android:textSize="@dimen/text_size_label_title"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_below="@id/ll_placeholder"
        android:layout_marginBottom="16dp"
        android:layout_height="1dp"
        android:background="@color/text_light_gray_color" />

    <LinearLayout
        android:id="@+id/ll_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_bottom_line"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:text="@string/text_material"
            android:textSize="@dimen/text_size_label_text" />
        <TextView
            android:id="@+id/tv_last_change_date_material"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="2021-08-27 13:00:00"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text" />
        <ProgressBar
            android:id="@+id/pb_material"
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="32dp"></ProgressBar>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="@string/text_download"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="downloadMaterial"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/text_review"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="reviewMaterial"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_material"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:text="@string/text_location"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_last_change_date_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="2021-08-27 13:00:00"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp" />
        <ProgressBar
            android:id="@+id/pb_location"
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="32dp"></ProgressBar>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="@string/text_download"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="downloadLocation"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/text_review"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="reviewLocation"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_location"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:text="@string/text_user"
            android:textSize="@dimen/text_size_label_text" />
        <TextView
            android:id="@+id/tv_last_change_date_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="2021-08-27 13:00:00"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text" />
        <ProgressBar
            android:id="@+id/pb_user"
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="32dp"></ProgressBar>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="@string/text_download"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="downloadUser"/>
        <Button
            android:id="@+id/btn_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/text_review"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="reviewUser"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_logistics_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_user"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:text="@string/text_logistics_provider"
            android:textSize="@dimen/text_size_label_text" />
        <TextView
            android:id="@+id/tv_last_change_date_logistics_provider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="2021-08-27 13:00:00"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text" />
        <ProgressBar
            android:id="@+id/pb_logistics_provider"
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="32dp"></ProgressBar>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="@string/text_download"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="downloadLogisticsProvider"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/text_review"
            android:background="@color/bg_colorSecondPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text"
            android:textColor="@color/text_colorSecondPrimary"
            android:onClick="reviewLogisticsProvider"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_logistics_provider"
        android:gravity="center_vertical"
        android:background="@color/bg_colorFourthPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:text="@string/text_version"
            android:textSize="@dimen/text_size_label_text" />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:gravity="right"
            android:text="V1.0.6"
            android:layout_marginLeft="1dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="@dimen/text_size_label_text" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_download_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/bg_colorSecondPrimary"
        android:onClick="downloadAll"
        android:padding="16dp"
        android:text="@string/text_download_all"
        android:textSize="@dimen/text_size_btn"
        android:textColor="@color/text_colorSecondPrimary">

    </Button>
</RelativeLayout>