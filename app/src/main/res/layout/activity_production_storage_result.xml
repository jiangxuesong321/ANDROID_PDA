<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProductionStorageResultActivity">

    <LinearLayout
            android:id="@+id/ll_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/tv_plant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="left"
                android:text="@string/text_plant"
                android:textSize="@dimen/text_size_label_title" />

        <EditText
                android:id="@+id/et_plant"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="1000"
                android:enabled="false"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_ori_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/ll_plant"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/tv_vendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="left"
                android:text="@string/text_ori_location"
                android:textSize="@dimen/text_size_label_title" />

        <EditText
                android:id="@+id/et_ori_location"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="1001 生产实验室"
                android:enabled="false"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_to_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/ll_ori_location"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/tv_to_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="left"
                android:text="@string/text_to_location"
                android:textSize="@dimen/text_size_label_title" />


        <Spinner
                android:id="@+id/sp_to_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginEnd="-8dp"
                android:layout_weight="4" />
    </LinearLayout>

    <View
            android:id="@+id/v_top_line"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_to_location"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@color/text_light_gray_color" />

    <LinearLayout
            android:id="@+id/ll_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_top_line"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_item"
                android:layout_marginLeft="2dp"
                android:background="@color/bg_colorFourthPrimary"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_list_header"
                android:textColor="@color/colorPrimary" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:text="@string/text_material"
                android:background="@color/bg_colorFourthPrimary"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_list_header"
                android:textColor="@color/colorPrimary" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="2dp"
                android:text="@string/text_material_desc"
                android:textSize="@dimen/text_size_list_header"
                android:background="@color/bg_colorFourthPrimary"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimary" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginLeft="1dp"
                android:text="@string/text_batch"
                android:textSize="@dimen/text_size_list_header"
                android:background="@color/bg_colorFourthPrimary"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimary" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:layout_marginLeft="2dp"
                android:text="@string/text_quantity"
                android:textSize="@dimen/text_size_list_header"
                android:background="@color/bg_colorFourthPrimary"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimary" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="@string/text_goods_bin"
                android:textSize="@dimen/text_size_list_header"
                android:background="@color/bg_colorFourthPrimary"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="@string/text_material"
            android:textSize="@dimen/text_size_list_header"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary" />


<!--        <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_marginLeft="2dp"-->
<!--                android:text="@string/text_operation"-->
<!--                android:textSize="@dimen/text_size_list_header"-->
<!--                android:background="@color/bg_colorFourthPrimary"-->
<!--                android:gravity="center"-->
<!--                android:paddingTop="8dp"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:textColor="@color/colorPrimary" />-->
    </LinearLayout>

    <View
            android:id="@+id/v_bottom_line"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_list_header"
            android:layout_height="1dp"
            android:background="@color/text_light_gray_color" />

    <ListView
            android:id="@+id/lv_material_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_btn_group"
            android:layout_below="@id/ll_list_header"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:divider="@color/colorDivider">

    </ListView>

    <LinearLayout
            android:id="@+id/ll_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_colorSecondPrimary"
                android:textColor="@color/text_colorSecondPrimary"
                android:layout_weight="1"
                android:onClick="confirm"
                android:text="@string/text_do"
                android:textSize="@dimen/text_size_btn" />

    </LinearLayout>

</RelativeLayout>