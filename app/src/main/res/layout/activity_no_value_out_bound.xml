<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NoValueOutBoundActivity">

    <LinearLayout
        android:id="@+id/ll_nvo_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/tv_nvo_plant_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="left"
            android:text="@string/text_plant"
            android:textSize="@dimen/text_size_label_title" />
        <Spinner
            android:id="@+id/sp_nvo_plant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_label_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nvo_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_nvo_plant"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="left"
            android:text="@string/text_location_from"
            android:textSize="@dimen/text_size_label_title"/>

        <Spinner
            android:id="@+id/sp_nvo_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nvo_confirm_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_nvo_location"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/text_confirm_date"
            android:textSize="@dimen/text_size_label_title"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et_nvo_confirm_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textSize="@dimen/text_size_label_title"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_nvo_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginStart="0dp"
            android:background="@color/bg_colorSecondPrimary"
            android:onClick="add"
            android:text="@string/text_add_manually"
            android:textColor="@color/text_colorSecondPrimary"
            android:textSize="@dimen/text_size_list_header"/>
    </LinearLayout>

    <View
        android:id="@+id/v_nvo_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_nvo_confirm_date"
        android:layout_marginTop="8dp"
        android:background="@color/text_light_gray_color"/>

    <LinearLayout
        android:id="@+id/ll_nvo_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_nvo_top_line"
        android:gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/text_material"
            android:layout_marginLeft="2dp"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_size_list_header"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/text_material_desc"
            android:background="@color/bg_colorFourthPrimary"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_size_list_header"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginLeft="2dp"
            android:text="@string/text_quantity"
            android:textSize="@dimen/text_size_list_header"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="1dp"
            android:text="@string/text_batch"
            android:textSize="@dimen/text_size_list_header"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="2dp"
            android:text="@string/text_serial_number"
            android:textSize="@dimen/text_size_list_header"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="@string/text_operation"
            android:textSize="@dimen/text_size_list_header"
            android:background="@color/bg_colorFourthPrimary"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <View
        android:id="@+id/v_nvo_bottom_line"
        android:layout_width="match_parent"
        android:layout_below="@id/ll_nvo_list_header"
        android:layout_height="1dp"
        android:background="@color/text_light_gray_color" />

    <ListView
        android:id="@+id/lv_nvo_material_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_nvo_buttons"
        android:layout_below="@id/v_nvo_bottom_line"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:divider="@color/colorDivider"/>

    <LinearLayout
        android:id="@+id/ll_nvo_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_nvo_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@color/bg_colorSecondPrimary"
            android:onClick="check"
            android:padding="8dp"
            android:text="@string/text_checkSerial"
            android:textColor="@color/text_colorSecondPrimary"
            android:textSize="@dimen/text_size_btn"/>

        <Button
            android:id="@+id/btn_nvo_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@color/bg_colorSecondPrimary"
            android:onClick="post"
            android:padding="8dp"
            android:text="@string/text_post"
            android:textColor="@color/text_colorSecondPrimary"
            android:textSize="@dimen/text_size_btn"/>
    </LinearLayout>
</RelativeLayout>