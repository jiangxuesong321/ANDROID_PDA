<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SalesInvoiceDetailActivity">

  <LinearLayout
      android:id="@+id/ll_list_items"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
>

    <TextView
        android:id="@+id/tv_column1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="10"
        android:textSize="@dimen/text_size_list" />
    <TextView
        android:id="@+id/tv_column2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="P01013666"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_size_list" />
    <TextView
        android:id="@+id/tv_column3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="收款机-商米-T2"
        android:singleLine="false"
        android:layout_marginLeft="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_size_list" />
    <EditText
        android:id="@+id/tv_column4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:singleLine="false"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textSize="@dimen/text_size_list" />
    <TextView
        android:id="@+id/tv_column5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_size_list" />
    <TextView
        android:id="@+id/tv_column6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_marginLeft="1dp"
        android:singleLine="false"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_size_list" />
    <TextView
        android:id="@+id/tv_column7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:text="@string/text_split"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="12sp" />
  </LinearLayout>
  </RelativeLayout>