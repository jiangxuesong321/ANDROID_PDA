<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.pda">
    <!-- App 权限声明 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="com.android.alarm.permission.WAKE_LOCK" />

    <application
        android:name=".application.AndroidApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan|stateHidden">

        <!-- 启动 Activity   intent-filter部分其实就表示默认展示页面 -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.POStorageHomeActivity"
            android:exported="true"
            android:label="@string/title_po_storage" />
        <activity
            android:name=".activities.POStorageMainActivity"
            android:exported="true"
            android:label="@string/title_po_shelving" />
        <activity
            android:name=".activities.POStorageResultActivity"
            android:exported="true"
            android:label="@string/title_po_shelving"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.POReceiveHomeActivity"
            android:exported="true"
            android:label="@string/title_po_receive" />
        <activity
            android:name=".activities.POReceiveResultActivity"
            android:exported="true"
            android:label="@string/title_po_receive"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".activities.ProductionStorageHomeActivity"
            android:exported="true"
            android:label="@string/title_production_storage" />

        <activity
            android:name=".activities.ProductionStorageResultActivity"
            android:exported="true"
            android:label="@string/title_production_storage"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <receiver
            android:name=".broadcastreceivers.AlarmsBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.MaterialActivity"
            android:exported="true"
            android:label="@string/text_material"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.LogisticsProviderActivity"
            android:exported="true"
            android:label="@string/text_logistics_provider"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.StorageLocationActivity"
            android:exported="true"
            android:label="@string/text_location"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/text_location"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activities.MasterDataActivity"
            android:exported="true"
            android:label="@string/text_basic_data"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.UserActivity"
            android:exported="true"
            android:label="@string/text_user"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
    </application>

</manifest>